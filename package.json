  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.28.1",
    "@types/node": "^22.13.8",
    "ajv": "^8.17.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "workspaces": [
    "scripts",
    "renderer",
    "material",
    "previewer",
    "full-sample/react",
    "core/.react/*"
  ],
  "volta": {
    "node": "22.14.0",
    "npm": "11.2.0"
  }
